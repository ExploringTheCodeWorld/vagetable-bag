{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "**/*.yml",
      { "include": "modules/system/prisma/prisma-client", "watchAssets": true },
      { "include": ".env","watchAssets": true }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
